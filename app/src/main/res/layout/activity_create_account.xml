<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jk"
    >




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/holo_red_dark"
        android:layout_marginTop="250dp"
        android:layout_marginStart="5dp"

        android:id="@+id/create_name"
        android:layout_marginEnd="5dp"
        android:hint=" Enter  Name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/holo_red_dark"
        android:layout_below="@+id/create_name"
        android:layout_marginTop="02dp"
        android:layout_marginStart="5dp"
        android:id="@+id/create_email"
        android:layout_marginEnd="5dp"
        android:hint="Enter email"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/holo_red_dark"
        android:layout_below="@+id/create_email"
        android:layout_marginTop="02dp"
        android:layout_marginStart="5dp"
        android:id="@+id/create_password"
        android:layout_marginEnd="5dp"
        android:hint="Enter password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_password"
        android:textColorHint="@android:color/holo_red_dark"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/create_mobilenumber"
        android:layout_marginEnd="5dp"
        android:hint=" Enter mobile number"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="register"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:textColor="@android:color/holo_red_dark"
        android:shadowColor="@android:color/holo_red_dark"
        android:layout_below="@id/create_mobilenumber"
             android:id="@+id/register"
        />
</RelativeLayout>