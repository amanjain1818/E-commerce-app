<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/productImage2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight=".4"/>


        <LinearLayout
            android:id="@+id/packingListLayout"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/packingListLayout1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cart_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:text="Name"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:gravity="left"
                    android:layout_marginRight="1dp"/>

                <TextView
                    android:id="@+id/remove_product_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_marginLeft="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/packingLayout1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/cart_qty1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:text="Quantity"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:gravity="left"
                    android:layout_marginRight="1dp"/>


                <TextView
                    android:id="@+id/remove_product_quantity"
                    android:layout_width="0dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1.1"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textCursorDrawable="@null" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/packingLayout2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"

                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/total_amount1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:text=" Total Price"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:gravity="left"
                    android:layout_marginRight="1dp"/>


                <TextView
                    android:id="@+id/remove_product_total_amount"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.1"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_dark" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/cart_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:text="Price"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:gravity="left"
                    android:layout_marginRight="1dp"/>


                <TextView
                    android:id="@+id/remove_product_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1.1"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_dark" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>